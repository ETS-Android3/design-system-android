<resources>
<!-- Colors -->
{% for categoryName, category in data.Color %}<!-- {{categoryName}} -->
	{% for color in category %}<color name="slds_{{color.name | lower}}" category="{{categoryName}}">{{color.value}}</color>
	{% endfor %}
{% endfor %}

<!-- Icon Background Colors -->
<!-- Note: Utility icons do not have background colors -->

{% for type, iconSet in icons %}{% if not('utility' in type) %}<!-- {{type | capitalize}} icon background colors -->
{% for icon in iconSet %}
	<color name="slds_icon_{{icon.backgroundColorName | lower}}" category="icon-background-color">{{icon.backgroundColor}}</color>{% endfor %}{% endif %}
{% endfor %}
 </resources>